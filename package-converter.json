{
  "name": "converthtml2pdf",
  "version": "1.0.0",
  "description": "Standalone HTML to PDF Converter for Windows",
  "main": "convertHTML2PDF.js",
  "bin": {
    "convertHTML2PDF": "./convertHTML2PDF.js"
  },
  "scripts": {
    "build": "pkg convertHTML2PDF.js --targets node18-win-x64 --output convertHTML2PDF.exe"
  },
  "keywords": [
    "html",
    "pdf",
    "converter",
    "puppeteer",
    "chromium",
    "windows"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "puppeteer": "^24.26.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": ".",
    "assets": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ]
  }
}